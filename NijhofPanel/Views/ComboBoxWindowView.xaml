<Window x:Class="NijhofPanel.Views.ComboBoxWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:NijhofPanel.Views"
        mc:Ignorable="d"
        Title="Selectie"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Height="160" 
        Width="350">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/NijhofPanel;component/UI/Themes/Controls/BasicButton.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/NijhofPanel;component/UI/Themes/Controls/ModernScrollbar.xaml" />
                <ResourceDictionary Source="pack://application:,,,/NijhofPanel;component/UI/Themes/Base/CoreTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="CurrentBackgroundColor" Color="{Binding Color, Source={StaticResource BackgroundColor}}" />
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Margin="10" Background="{DynamicResource CurrentBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TextMessage" 
                   Text="Maak een selectie:" 
                   FontFamily="Arial"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,10" />

        <ComboBox x:Name="ComboOptions"
                  Grid.Row="1"
                  MinHeight="26"
                  Margin="0,0,0,10"
                  IsEditable="False" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Style="{StaticResource BasicButton}" Content="OK" IsDefault="True" Click="Ok_Click"/>
            <Button Style="{StaticResource BasicButton}" Content="Annuleren" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
