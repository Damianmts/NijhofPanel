<Page x:Class="NijhofPanel.Views.ElectricalPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:NijhofPanel.Views"
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      mc:Ignorable="d"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      MinHeight="500"
      MinWidth="270"
      Background="{DynamicResource BackgroundColor_Light}">

    <!-- To Do -->
    <!-- TODO - Make/Add higher quality icons (SVG Vector) -->
    <!-- TODO - Add logic to place elements -->

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/NijhofPanel;component/Resources/Themes/Thm_DarkMode.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/NijhofPanel;component/Resources/Themes/Thm_Buttons.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/NijhofPanel;component/Resources/Themes/Thm_ModernScrollbar.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <ScrollViewer.Style>
            <Style TargetType="ScrollViewer">
                <Style.Resources>
                    <Style TargetType="ScrollBar" BasedOn="{StaticResource ModernScrollBar}">
                        <Setter Property="MinWidth" Value="4" />
                    </Style>
                </Style.Resources>
            </Style>
        </ScrollViewer.Style>

        <StackPanel Margin="10">
            
            <TextBlock Text="Stopcontact"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       FontSize="18"
                       Margin="0,0,0,5" />
            <WrapPanel Orientation="Horizontal">
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/WCD_Enkel.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/WCD_2vOpbouw.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/WCD_1vWaterdicht.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/WCD_Perilex.png"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal">
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/WCD_Dubbel.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/WCD_Vloer.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/WCD_2vWaterdicht.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/WCD_Kracht.png"/>
            </WrapPanel>
            
            <TextBlock Text="Aansluitpunt"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       FontSize="18"
                       Margin="0,5,0,5" />
            <WrapPanel Orientation="Horizontal">
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/ASP_Bedraad.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/ASP_230v.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/ASP_2x 230v.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/ASP_400v.png"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal">
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/ASP_Onbedraad.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/ASP_CAP.png"/>
            </WrapPanel>
            
            <TextBlock Text="Data"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       FontSize="18"
                       Margin="0,5,0,5" />
            <WrapPanel Orientation="Horizontal">
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/DATA_Enkel.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/DATA_Dubbel.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/DATA_Bekabeld.png"/>
            </WrapPanel>
            
            <TextBlock Text="Schakelaar"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       FontSize="18"
                       Margin="0,5,0,5" />
            <WrapPanel Orientation="Horizontal">
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/SCHAK_Enkelpolig.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/SCHAK_Dubbelpolig.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/SCHAK_Vierpolig.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/SCHAK_Wissel.png"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal">
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/SCHAK_WisselDubbelP.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/SCHAK_2xWissel.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/SCHAK_Serie.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/SCHAK_Kruis.png"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal">
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/SCHAK_Dimmer.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/SCHAK_DimmerWissel.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/SCHAK_Jaloezie.png"/>
                <Button Style="{StaticResource ElectricalButton}" Content="Beweging Wand"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal">
                <Button Style="{StaticResource ElectricalButton}" Content="Beweging Plafond"/>
                <Button Style="{StaticResource ElectricalButton}" Content="Schemer- schakelaar"/>
            </WrapPanel>
            
            <TextBlock Text="Verlichting"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       FontSize="18"
                       Margin="0,5,0,5" />
            <WrapPanel Orientation="Horizontal">
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/VERL_Centraaldoos.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/VERL_Plafond.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/VERL_Spot.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/VERL_Wand.png"/>
            </WrapPanel>
            
            <TextBlock Text="Overig"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       FontSize="18"
                       Margin="0,5,0,5" />
            <WrapPanel Orientation="Horizontal">
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/OVG_Rookmelder.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/OVG_Bediening.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/OVG_Bel.png"/>
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/OVG_Schel.png"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal">
                <Button Style="{StaticResource ElectricalButton}" Tag="/NijhofPanel;component/Resources/Icons/OVG_Intercom.png"/>
                <Button Style="{StaticResource ElectricalButton}" Content="Grond- kabel"/>
            </WrapPanel>
            
            <TextBlock Text="Tools"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       FontSize="18"
                       Margin="0,5,0,5" />
            <WrapPanel Orientation="Horizontal">
                <Button Style="{StaticResource ElectricalButton}" Content="Groep nummer"/>
                <Button Style="{StaticResource ElectricalButton}" Content="Switch code"/>
                <Button Style="{StaticResource ElectricalButton}" Content="Code lijst"/>
            </WrapPanel>

        </StackPanel>
    </ScrollViewer>
</Page>