<Page x:Class="NijhofPanel.Views.StartPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      MinHeight="600"
      MinWidth="270"
      Background="{DynamicResource CurrentBackgroundColor}">

    <!-- Resources -->
    <Page.Resources>
        <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary
                Source="pack://application:,,,/NijhofPanel;component/UI/Themes/Base/CoreTheme.xaml" />
            <ResourceDictionary
                Source="pack://application:,,,/NijhofPanel;component/Resources/Icons/IconsVectorGeneric.xaml" />
        </ResourceDictionary.MergedDictionaries>
        <SolidColorBrush x:Key="CurrentBackgroundColor"
                         Color="{Binding Color, Source={StaticResource BackgroundColor}}" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,0">
            <Grid Width="100" Height="100">
                <Rectangle Margin="8,0,0,0"
                           Fill="#FBD304"
                           Width="40"
                           Height="70"
                           HorizontalAlignment="Left" />
                <Rectangle Margin="0,0,10,0"
                           Fill="White"
                           Width="40"
                           Height="70"
                           HorizontalAlignment="Right" />
                <Path Fill="#046434"
                      Data="{StaticResource NijhofCutoutIcon}"
                      Stretch="Uniform" />
            </Grid>

            <TextBlock x:Name="GreetingTextBlock"
                       Text="(Atjow)"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       FontSize="24"
                       Foreground="#046434" />
            
            <TextBlock x:Name="NameTextBlock"
                       Text="(Gebruiker)"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       FontSize="24"
                       Foreground="#046434" />
            
            <!-- Project notities (Post-it stijl) -->
            <Grid Margin="0,100,0,0" HorizontalAlignment="Center">
                <!-- De Post-it zelf -->
                <Border x:Name="StickyNote"
                        Margin="0,10,0,0"
                        Padding="14"
                        Background="#FFF59D" 
                        BorderBrush="#ECD86A"
                        BorderThickness="1"
                        CornerRadius="5"
                        Width="200"
                        MinHeight="200"
                        Panel.ZIndex="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="16"
                                          ShadowDepth="4"
                                          Direction="270"
                                          Opacity="0.25"
                                          Color="Black" />
                    </Border.Effect>

                    <Grid>
                        <!-- Tekst met placeholder -->
                        <Grid>
                            <TextBox x:Name="NotesBox"
                                     Text="{Binding NotesText, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="4"
                                     FontFamily="Segoe UI"
                                     FontSize="13.5"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Disabled" />

                            <!-- Placeholder als er geen tekst is -->
                            <TextBlock Text="Schrijf je projectnotities hier..."
                                       Foreground="#99555555"
                                       FontStyle="Italic"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=NotesBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>

</Page>