                    </services:Srv_NavButton.Icon>
                </services:Srv_NavButton>
            </StackPanel>
        </Grid>
        
        <!-- Right separator line -->
        <Border Grid.Column="0" 
                BorderThickness="0,0,1,0" 
                BorderBrush="#DDDDDD"/>
        
        <!-- Page Frame -->
        <Frame Grid.Column="1" x:Name="Navframe" NavigationUIVisibility="Hidden" Background="#e9ecef" />
        
    </Grid>
</UserControl>
