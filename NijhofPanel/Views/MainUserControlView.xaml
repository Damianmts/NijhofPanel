            <!-- Dark mode, User and Settings Buttons -->
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,0">
                <Separator/>
                <services:Srv_NavButton Command="{Binding Com_ToggleTheme}" Margin="3" Padding="6">
                    <services:Srv_NavButton.Icon>
                        <PathGeometry Figures="M10 3.5a6.5 6.5 0 1 1 0 13v-13ZM10 2a8 8 0 1 0 0 16a8 8 0 0 0 0-16Z"/>
