    <!-- Resources -->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/NijhofPanel;component/Resources/Themes/Thm_NavSidebarButton.xaml"/>
