<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Light Theme -->
    <SolidColorBrush x:Key="BackgroundColor_Light" Color="White"/>
    <SolidColorBrush x:Key="TextColor_Light" Color="Black"/>
    
    <!-- Dark Theme -->
    <SolidColorBrush x:Key="BackgroundColor_Dark" Color="#3B4453"/>
    <SolidColorBrush x:Key="TextColor_Dark" Color="White"/>
</ResourceDictionary>